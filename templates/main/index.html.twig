{% extends 'base.html.twig' %}

{% block title %}Welcome to our survey {{ survey_name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welcome to our survey {{ survey_name }}</h1>

    <ul>
        <li class="">Please take our survey, {{ app.user.username }}</li>

    </ul>

    {{ form(form) }}
</div>
{% endblock %}
